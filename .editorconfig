# http://editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf
max_line_length = 120

[*.py]
indent_size = 4
indent_style = space
skip = build,.tox,dist,.mypy_cache,scripts
src_paths=snakypy,tests

[LICENSE]
insert_final_newline = false

